{
  "name": "Screen Sharing",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": [
    "desktopCapture",
    "tabs",
    "*://*/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content-script.js"]
  }]
}
